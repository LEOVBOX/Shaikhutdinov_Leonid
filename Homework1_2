using System;

namespace exe_2
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите первую переменную:");
            var first = Console.ReadLine();
            int a = Convert.ToInt32(first);
            Console.WriteLine("Введите вторую переменную:");
            var second = Console.ReadLine();
            int b = Convert.ToInt32(second);
            if (b == 0)
            {
                while (b == 0){
                    Console.WriteLine("Знаменатель равен нулю, введите другое знчение:");
                    second = Console.ReadLine();
                    b = Convert.ToInt32(second);
                }
            }
            Console.WriteLine("Ответ:" + a / b);
            


        }
    }
    
    
}
